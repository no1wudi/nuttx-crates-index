config RUST_CRATES_REGEX_LITE
	tristate "\"Rust Crates Regex Lite\" example"
	default n
	---help---
		Enable the \"Rust Crates Regex Lite\" example application.
		This is a lightweight alternative to the full regex crate.

if RUST_CRATES_REGEX_LITE

config RUST_CRATES_REGEX_LITE_PRIORITY
	int "Rust Regex Lite task priority"
	default 100

config RUST_CRATES_REGEX_LITE_STACKSIZE
	int "Rust Regex Lite stack size"
	default 16384
	---help---
		Stack size to be used. The Regex Lite example needs less memory
		compared to the full regex crate.

endif
